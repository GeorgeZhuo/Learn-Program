#ifndef PL0_H
#define PL0_H

#define NUM_REMAIN_WORDS 13  //number of remained words
#define MAX_LENGTH_LEXICAL  10 //max length of lexical
#define NUM_SYMBOL  33
#define MAX_WORDS 1000      //max words to store
#define MAX_NUM_BIT 10      //max bit of number

enum symbol {
    BEGINSYM,   //begin
    CALLSYM,    //call
    CONSTSYM,   //const
    DOSYM,      //do
    ENDSYM,     //end
    IFSYM,      //if
    ODDSYM,     //odd
    PROCSYM,    //procedure
    READSYM,    //read
    THENSYM,    //then
    VARSYM,     //var
    WHILESYM,   //while
    WRITESYM,   //write
    NUL,        //NULL
    IDENTIFY,   //like sDA3F
    NUMBER,     //0,1,...,9
    PLUS,       //+
    MINUS,      //-
    TIMES,      //*
    SLASH,      ///
    EQL,        //==
    NEQL,       //#
    LSS,        //<
    LSSEQL,     //<=
    GRTR,       //>
    GRTREQL,    //>=
    LPAREN,     //(
    RPAREN,     //)
    COMMA,      //,
    SEMICOLON,  //;
    PERIOD,     //.
    BECOMES,    //:=
    CONSTDEF,   //=
};

enum object {
    CONSTANT,
    VARIABLE,
    PROCEDURE,
};

typedef struct {
    char szWord[10];
    enum symbol eType;
    int value;
} word_etype_t;

FILE *fPointer;

char szWord[MAX_LENGTH_LEXICAL];
enum symbol etype;
int nAllIndex;
word_etype_t szAllWords[MAX_WORDS];
word_etype_t remainWordMap[NUM_REMAIN_WORDS];
enum symbol singleSym[256];
char symStringMap[NUM_SYMBOL][10];

/* function define */
int print_source_file();
int init();
int lexical_analysis();
int print_lexical_table();
enum symbol inRemainWords(char *);

#endif // PL0_H
